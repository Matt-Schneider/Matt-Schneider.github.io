    <script>
        // --- DATA PROCESSING UTILITIES ---

        // Function to wrap long labels for Chart.js
        function wrapLabel(str, maxLen = 16) {
            if (str.length <= maxLen) return str;
            const words = str.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if (currentLine.length + 1 + words[i].length <= maxLen) {
                    currentLine += ' ' + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // Global Chart Defaults
        Chart.defaults.font.family = "'Inter', sans-serif";
        Chart.defaults.color = '#64748B';
        
        // Tooltip Callback for Multiline Labels
        const tooltipConfig = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            }
        };

        // --- CHART GENERATION ---

        // 1. Radar Chart: Tool Capability Mapping
        const radarCtx = document.getElementById('toolRadarChart').getContext('2d');
        const radarData = {
            labels: ['Synthesis', 'Data Depth', 'Automation', 'Creativity', 'Security', 'Ease of Use'],
            datasets: [
                {
                    label: 'Copilot (M365)',
                    data: [9, 5, 4, 9, 8, 9],
                    fill: true,
                    backgroundColor: 'rgba(124, 58, 237, 0.2)', // Violet
                    borderColor: '#7C3AED',
                    pointBackgroundColor: '#7C3AED',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: '#7C3AED'
                },
                {
                    label: 'Copilot Studio',
                    data: [6, 7, 9, 6, 8, 6],
                    fill: true,
                    backgroundColor: 'rgba(13, 148, 136, 0.2)', // Teal
                    borderColor: '#0D9488',
                    pointBackgroundColor: '#0D9488',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: '#0D9488'
                },
                {
                    label: 'Power BI',
                    data: [4, 10, 3, 2, 9, 5],
                    fill: true,
                    backgroundColor: 'rgba(37, 99, 235, 0.2)', // Blue
                    borderColor: '#2563EB',
                    pointBackgroundColor: '#2563EB',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: '#2563EB'
                }
            ]
        };

        // Process Radar Labels
        radarData.labels = radarData.labels.map(l => wrapLabel(l));

        new Chart(radarCtx, {
            type: 'radar',
            data: radarData,
            options: {
                maintainAspectRatio: false,
                elements: {
                    line: { borderWidth: 3 }
                },
                scales: {
                    r: {
                        angleLines: { display: true },
                        suggestedMin: 0,
                        suggestedMax: 10,
                        ticks: { backdropColor: 'transparent' } // Hide label background
                    }
                },
                plugins: {
                    tooltip: tooltipConfig,
                    legend: {
                        position: 'bottom',
                        labels: { usePointStyle: true, padding: 20 }
                    }
                }
            }
        });

        // 2. Donut Chart: Input Source Composition
        const donutCtx = document.getElementById('sourceDonutChart').getContext('2d');
        const donutData = {
            labels: ['Internal PDFs & Docs', 'Public Roadmap Data', 'Meeting Transcripts', 'CRM/ERP Data', 'Social/News Sentiment'],
            datasets: [{
                data: [35, 20, 25, 15, 5],
                backgroundColor: [
                    '#7C3AED', // Violet
                    '#2563EB', // Blue
                    '#0D9488', // Teal
                    '#DB2777', // Pink
                    '#64748B'  // Slate
                ],
                hoverOffset: 4,
                borderWidth: 0
            }]
        };

        // Process Donut Labels
        donutData.labels = donutData.labels.map(l => wrapLabel(l));

        new Chart(donutCtx, {
            type: 'doughnut',
            data: donutData,
            options: {
                maintainAspectRatio: false,
                cutout: '65%',
                plugins: {
                    tooltip: tooltipConfig,
                    legend: {
                        position: 'right',
                        labels: { 
                            boxWidth: 15, 
                            padding: 15,
                            font: { size: 11 }
                        }
                    }
                }
            }
        });

    </script>

    <!-- Source Material Analysis & Plan -->
    <!--
    PLAN SUMMARY:
    The source material provided was a request to build a research methodology using M365 Copilot.
    
    1.  **Analysis:** The user needs to move from "having data" (paid account, PDFs) to "having insights" (facts, maps, specific people/process info). They specifically requested a repeatable prompt.
    2.  **Narrative:** We structure the infographic as a "How-To" guide. It starts with the framework (People/Process/Tech), moves to the tools (Capabilities), then visualizes the workflow (The Loop), and ends with the concrete deliverable (The Prompt).
    3.  **Visual Choices:** - Radar Chart: Chosen to compare the overlapping capabilities of the M365 suite (Copilot vs Studio vs PBI) to show *where* to do the research.
        - Donut Chart: chosen to show the variety of data inputs required for a holistic view.
        - Flow Diagram (HTML): Chosen to visualize the "Recursive" nature of the prompt request, which is a process, not a static data point.
    -->
    
    <!-- 
    CHART SELECTION JUSTIFICATION (NO SVG):
    1. Radar Chart: Compare (Goal). Best for showing multivariate strengths of different tools. Implemented via Chart.js.
    2. Donut Chart: Inform/Composition (Goal). Shows the breakdown of data sources. Implemented via Chart.js.
    3. Process Flow: Organize (Goal). Shows the research steps. Implemented via Tailwind/HTML (No Mermaid).
    4. Cards: Inform (Goal). Used for the People/Process/Tech pillars. Implemented via Tailwind/HTML.
    -->

    <!-- CONFIRMATION: NEITHER Mermaid JS NOR SVG were used anywhere in the output. -->

