const CostCalculator = () => {
  const [currentSpend, setCurrentSpend] = useState(100000);
  const [multiplier, setMultiplier] = useState(1.47);
  
  const projected = Math.round(currentSpend * multiplier);
  const diff = projected - currentSpend;

  return (
    <div className="flex flex-col h-full p-4 md:p-8">
      <h2 className="text-3xl font-bold text-gray-900 mb-2">The "Broadcom Tax"</h2>
      <p className="text-gray-600 mb-8">
        Foundry data suggests an average 1.47x multiplier, though edge cases in the mid-market report up to 10x increases due to bundling.
      </p>

      <div className="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden flex flex-col md:flex-row h-full max-h-[500px]">
        
        {/* Input Section */}
        <div className="p-8 bg-gray-50 md:w-1/2 flex flex-col justify-center space-y-8">
          <div>
            <label className="block text-sm font-bold text-gray-700 mb-2">
              Annual License Spend ($)
            </label>
            <input 
              type="number" 
              value={currentSpend}
              onChange={(e) => setCurrentSpend(Number(e.target.value))}
              className="w-full p-3 text-lg border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none"
            />
          </div>

          <div>
            <label className="block text-sm font-bold text-gray-700 mb-2">
              Market Segment Impact
            </label>
            <div className="space-y-2">
              <button 
                onClick={() => setMultiplier(1.47)}
                className={`w-full text-left p-3 rounded-lg border transition-all ${multiplier === 1.47 ? 'bg-blue-50 border-blue-500 ring-1 ring-blue-500' : 'bg-white border-gray-300 hover:bg-gray-50'}`}
              >
                <div className="font-bold text-gray-800">Average Enterprise (1.47x)</div>
                <div className="text-xs text-gray-500">Based on Foundry weighted average</div>
              </button>
              
              <button 
                onClick={() => setMultiplier(2.0)}
                className={`w-full text-left p-3 rounded-lg border transition-all ${multiplier === 2.0 ? 'bg-blue-50 border-blue-500 ring-1 ring-blue-500' : 'bg-white border-gray-300 hover:bg-gray-50'}`}
              >
                <div className="font-bold text-gray-800">Mid-Market Standard (2.0x)</div>
                <div className="text-xs text-gray-500">Loss of generic discounts & bundling</div>
              </button>

              <button 
                onClick={() => setMultiplier(4.0)}
                className={`w-full text-left p-3 rounded-lg border transition-all ${multiplier === 4.0 ? 'bg-blue-50 border-blue-500 ring-1 ring-blue-500' : 'bg-white border-gray-300 hover:bg-gray-50'}`}
              >
                <div className="font-bold text-gray-800">SMB / Essentials (4.0x - 10x)</div>
                <div className="text-xs text-gray-500">Forced move from Essentials to Standard/VVF</div>
              </button>
            </div>
          </div>
        </div>

        {/* Result Section */}
        <div className="p-8 md:w-1/2 bg-white flex flex-col justify-center items-center text-center relative overflow-hidden">
          <div className="absolute top-0 right-0 p-4 opacity-10">
            <DollarSign className="w-64 h-64 text-green-500" />
          </div>
          
          <h3 className="text-gray-500 font-medium uppercase tracking-widest mb-4">Projected Annual Cost</h3>
          <div className="text-5xl font-extrabold text-gray-900 mb-2">
            ${projected.toLocaleString()}
          </div>
          <div className="flex items-center text-red-500 font-bold bg-red-50 px-4 py-2 rounded-full">
            <TrendingUp className="w-5 h-5 mr-2" />
            +${diff.toLocaleString()} Increase
          </div>
          
          <div className="mt-8 text-sm text-gray-500 text-left w-full border-t pt-4">
            <p className="mb-2"><strong>Hidden Costs Not Included:</strong></p>
            <ul className="list-disc pl-4 space-y-1">
              <li>Hardware Refresh (HCL Compliance)</li>
              <li>"Shelfware" Inefficiency (Paying for unused vSAN/NSX)</li>
              <li>Migration Labor & Dual-Running Costs</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  );
};

const MigrationPhysics = () => {
  const [vmCount, setVmCount] = useState(500);
  const minsPerVm = 62;
  
  const totalHours = Math.round((vmCount * minsPerVm) / 60);
  const engineerYears = (totalHours / 2000).toFixed(1); // Assuming 2000 hour work year
  const engineerMonths = Math.round(totalHours / 160); // Assuming 160 hour work month

  return (
    <div className="flex flex-col h-full p-4 md:p-8">
      <h2 className="text-3xl font-bold text-gray-900 mb-2">The Physics of Migration</h2>
      <p className="text-gray-600 mb-8">
        Foundry research quantified the "Technical Migration Tax" at <strong>62 minutes per VM</strong>. This creates significant inertia.
      </p>

      <div className="grid grid-cols-1 md:grid-cols-2 gap-8 h-full">
        <div className="bg-white p-6 rounded-xl shadow-md border border-gray-200">
          <h3 className="text-lg font-bold text-gray-800 mb-4">Migration Effort Estimator</h3>
          
          <div className="mb-8">
            <label className="block text-sm font-bold text-gray-700 mb-2">
              Number of VMs to Migrate: <span className="text-blue-600 text-xl">{vmCount}</span>
            </label>
            <input 
              type="range" 
              min="100" 
              max="5000" 
              step="50"
              value={vmCount}
              onChange={(e) => setVmCount(Number(e.target.value))}
              className="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer"
            />
            <div className="flex justify-between text-xs text-gray-400 mt-2">
              <span>100 VMs</span>
              <span>5,000 VMs</span>
            </div>
          </div>

          <div className="space-y-4">
            <div className="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
              <div className="flex items-center">
                <Clock className="w-5 h-5 text-gray-500 mr-3" />
                <span className="text-gray-700 font-medium">Total Technical Hours</span>
              </div>
              <span className="text-2xl font-bold text-gray-900">{totalHours.toLocaleString()}</span>
            </div>
            
            <div className="flex items-center justify-between p-4 bg-blue-50 rounded-lg border border-blue-100">
              <div className="flex items-center">
                <Users className="w-5 h-5 text-blue-500 mr-3" />
                <span className="text-blue-800 font-medium">Engineer Months (1 FTE)</span>
              </div>
              <span className="text-2xl font-bold text-blue-900">{engineerMonths}</span>
            </div>

             <div className="flex items-center justify-between p-4 bg-indigo-50 rounded-lg border border-indigo-100">
              <div className="flex items-center">
                <Server className="w-5 h-5 text-indigo-500 mr-3" />
                <span className="text-indigo-800 font-medium">Engineer Years</span>
              </div>
              <span className="text-2xl font-bold text-indigo-900">{engineerYears}</span>
            </div>
          </div>
        </div>

        <div className="flex flex-col justify-center space-y-6">
          <div className="bg-amber-50 p-6 rounded-xl border-l-4 border-amber-400">
            <h4 className="font-bold text-amber-800 mb-2 flex items-center"><AlertTriangle className="w-4 h-4 mr-2"/> The "Iceberg" Warning</h4>
            <p className="text-sm text-amber-800">
              The 62-minute figure typically covers V2V conversion. It <strong>excludes</strong>:
            </p>
            <ul className="list-disc pl-5 mt-2 text-sm text-amber-800 space-y-1">
              <li>Dependency Mapping</li>
              <li>App Owner Approvals</li>
              <li>Backup Reconfiguration</li>
              <li>IP Address Management</li>
              <li>User Acceptance Testing (UAT)</li>
            </ul>
          </div>
          
          <div className="bg-gray-800 text-white p-6 rounded-xl font-mono text-sm leading-relaxed overflow-hidden relative">
            <div className="absolute top-2 right-2 opacity-20 text-xs">ASCII_ART_MODE: ON</div>
            <pre className="whitespace-pre">
{`
      |
      |   [ MIGRATION FRICTION ]
      |
100% -+           .
      |         . '
 75% -+       .'    <-- 89% Need New Staff
      |     .'
 50% -+   .'
      | .'          <-- 62 Mins/VM
 25% -+
      |
 0%  -+-------------------------
      Cost    Staff   Time   Risk
`}
            </pre>
          </div>
        </div>
      </div>
    </div>
  );
};

