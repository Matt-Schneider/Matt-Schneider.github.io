import React, { useState, useEffect } from 'react';
import { 
  ArrowRight, 
  ArrowLeft, 
  TrendingDown, 
  TrendingUp, 
  AlertTriangle, 
  Clock, 
  DollarSign, 
  Server, 
  Shield, 
  Users,
  PieChart,
  Activity,
  CheckCircle,
  XCircle,
  BarChart3
} from 'lucide-react';

// --- Components ---

const Slide = ({ children, isActive }) => {
  if (!isActive) return null;
  return (
    <div className="flex flex-col h-full w-full animate-in fade-in slide-in-from-right-4 duration-500">
      {children}
    </div>
  );
};

const StatCard = ({ title, value, subtext, icon: Icon, color = "blue" }) => (
  <div className={`bg-white p-6 rounded-xl shadow-sm border border-${color}-100 flex flex-col items-center text-center hover:shadow-md transition-shadow`}>
    {Icon && <Icon className={`w-8 h-8 text-${color}-600 mb-3`} />}
    <h3 className="text-sm font-semibold text-gray-500 uppercase tracking-wider">{title}</h3>
    <div className={`text-3xl font-bold text-${color}-700 my-2`}>{value}</div>
    {subtext && <p className="text-xs text-gray-400">{subtext}</p>}
  </div>
);

const ProgressBar = ({ label, value, max, color }) => (
  <div className="mb-4">
    <div className="flex justify-between mb-1">
      <span className="text-sm font-medium text-gray-700">{label}</span>
      <span className="text-sm font-medium text-gray-500">{value}%</span>
    </div>
    <div className="w-full bg-gray-200 rounded-full h-2.5">
      <div 
        className={`bg-${color}-600 h-2.5 rounded-full transition-all duration-1000 ease-out`} 
        style={{ width: `${(value/max)*100}%` }}
      ></div>
    </div>
  </div>
);

// --- Sections ---

