// --- Components ---

const ProgressBar = ({ progress }) => (
  <div className="w-full bg-gray-200 rounded-full h-4 overflow-hidden border border-gray-300">
    <div 
      className="bg-indigo-600 h-4 transition-all duration-500 ease-in-out flex items-center justify-center text-[10px] text-white font-bold" 
      style={{ width: `${progress}%` }}
    >
      {Math.round(progress)}%
    </div>
  </div>
);

const LinkSearch = ({ term }) => (
  <a 
    href={`https://www.google.com/search?q=${encodeURIComponent(term)}`} 
    target="_blank" 
    rel="noopener noreferrer"
    className="text-blue-600 hover:text-blue-800 hover:underline inline-flex items-center gap-1 text-sm"
    title={`Search for ${term}`}
  >
    {term} <Search className="w-3 h-3" />
  </a>
);

// --- Main App ---

export default function FashionRoadmapApp() {
  const [activeTab, setActiveTab] = useState('summary');
  const [uniChoice, setUniChoice] = useState('TWU'); // 'TWU' or 'UNT'
  const [expandedYear, setExpandedYear] = useState(null);
  const [checklistState, setChecklistState] = useState({});

  // Load checklist from local storage
  useEffect(() => {
    const saved = localStorage.getItem('fashionRoadmapChecklist');
    if (saved) setChecklistState(JSON.parse(saved));
  }, []);

  // Save checklist to local storage
  useEffect(() => {
    localStorage.setItem('fashionRoadmapChecklist', JSON.stringify(checklistState));
  }, [checklistState]);

  const toggleCheck = (id) => {
    setChecklistState(prev => ({ ...prev, [id]: !prev[id] }));
  };

  const calculateProgress = () => {
    const total = CHECKLIST_DATA.reduce((acc, cat) => acc + cat.items.length, 0);
    const checked = Object.values(checklistState).filter(Boolean).length;
    return (checked / total) * 100;
  };

  const UniToggle = () => (
    <div className="flex bg-gray-100 p-1 rounded-lg w-fit mx-auto mb-6">
      {['TWU', 'UNT'].map((uni) => (
        <button
          key={uni}
          onClick={() => setUniChoice(uni)}
          className={`px-6 py-2 rounded-md text-sm font-medium transition-all duration-200 ${
            uniChoice === uni 
              ? 'bg-white text-gray-900 shadow-sm border border-gray-200' 
              : 'text-gray-500 hover:text-gray-700'
          }`}
        >
          {UNIVERSITIES[uni].name}
        </button>
      ))}
    </div>
  );

  // --- Views ---

  const renderSummary = () => (
    <div className="space-y-8 animate-in fade-in duration-500">
      <div className="grid md:grid-cols-3 gap-4">
        <div className="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-r-lg">
          <h3 className="font-bold text-blue-900 flex items-center gap-2">
            <Map className="w-5 h-5" /> Phase 1: Collin
          </h3>
          <p className="text-sm text-blue-800 mt-2">Years 1-2.5</p>
          <p className="text-sm text-gray-600 mt-1">Foundation, Core Curriculum, Associate Degree, Basic Art & Psych.</p>
        </div>
        <div className={`bg-gray-50 border-l-4 p-4 rounded-r-lg ${uniChoice === 'TWU' ? 'border-red-500 bg-red-50' : 'border-gray-300'}`}>
          <h3 className={`font-bold flex items-center gap-2 ${uniChoice === 'TWU' ? 'text-red-900' : 'text-gray-500'}`}>
            <TrendingUp className="w-5 h-5" /> Phase 2: TWU
          </h3>
          <p className="text-sm mt-2 font-medium">Dual BA/BS Integrated</p>
          <p className="text-sm text-gray-600 mt-1">Seamless blend of Design & Merchandising with Marketing Minor.</p>
        </div>
        <div className={`bg-gray-50 border-l-4 p-4 rounded-r-lg ${uniChoice === 'UNT' ? 'border-green-500 bg-green-50' : 'border-gray-300'}`}>
          <h3 className={`font-bold flex items-center gap-2 ${uniChoice === 'UNT' ? 'text-green-900' : 'text-gray-500'}`}>
            <Palette className="w-5 h-5" /> Phase 2: UNT
          </h3>
          <p className="text-sm mt-2 font-medium">Concurrent BFA + BS</p>
          <p className="text-sm text-gray-600 mt-1">Two distinct degrees. Heavy art focus (BFA) + Analytic focus (BS).</p>
        </div>
      </div>

      <div className="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
        <div className="p-6 border-b border-gray-100">
          <h2 className="text-xl font-bold text-gray-900">University Comparison</h2>
          <p className="text-gray-500 text-sm mt-1">Select your preferred path above to update the timeline.</p>
        </div>
        <div className="grid md:grid-cols-2 divide-y md:divide-y-0 md:divide-x divide-gray-100">
          <div className={`p-6 ${uniChoice === 'TWU' ? 'bg-red-50/30' : ''}`}>
            <div className="flex items-center justify-between mb-4">
              <h3 className="font-bold text-lg text-red-900">TWU</h3>
              {uniChoice === 'TWU' && <CheckCircle className="w-5 h-5 text-red-600" />}
            </div>
            <ul className="space-y-3 text-sm text-gray-700">
              <li className="flex gap-2"><span className="text-red-500 font-bold">•</span> Dual Degree (BA + BS) in one plan</li>
              <li className="flex gap-2"><span className="text-red-500 font-bold">•</span> Built-in Marketing Minor</li>
              <li className="flex gap-2"><span className="text-red-500 font-bold">•</span> Requirement: 2 Internships (1 Design, 1 Merch)</li>
              <li className="flex gap-2"><span className="text-red-500 font-bold">•</span> Capstone: Collection Development</li>
            </ul>
          </div>
          <div className={`p-6 ${uniChoice === 'UNT' ? 'bg-green-50/30' : ''}`}>
             <div className="flex items-center justify-between mb-4">
              <h3 className="font-bold text-lg text-green-900">UNT</h3>
              {uniChoice === 'UNT' && <CheckCircle className="w-5 h-5 text-green-600" />}
            </div>
            <ul className="space-y-3 text-sm text-gray-700">
              <li className="flex gap-2"><span className="text-green-500 font-bold">•</span> Concurrent Degrees (BFA + BS)</li>
              <li className="flex gap-2"><span className="text-green-500 font-bold">•</span> Portfolio Entry Review Required</li>
              <li className="flex gap-2"><span className="text-green-500 font-bold">•</span> Large Senior Fashion Show</li>
              <li className="flex gap-2"><span className="text-green-500 font-bold">•</span> Strong emphasis on Excel & Analytics</li>
            </ul>
          </div>
        </div>
      </div>

       <div className="bg-slate-900 text-white p-6 rounded-xl shadow-lg">
        <h2 className="text-lg font-bold mb-2 flex items-center gap-2">
          <User className="w-5 h-5" /> The Outcome: "That Rare Creature"
        </h2>
        <p className="text-slate-300 text-sm leading-relaxed">
          By the end of Year 6, you will possess a 360° skill set:
          <br />
          1. <strong>Creative:</strong> Sketch, pattern, drape, and sew a collection.
          <br />
          2. <strong>Visual:</strong> Art direct shoots, create lookbooks, and design graphics.
          <br />
          3. <strong>Analytical:</strong> Forecast trends, calculate retail metrics, and analyze data.
        </p>
      </div>
    </div>
  );

  const renderTimeline = () => (
    <div className="space-y-6 animate-in slide-in-from-bottom-4 duration-500">
      <div className="bg-yellow-50 border border-yellow-200 p-4 rounded-lg mb-6 flex items-start gap-3">
        <div className="mt-1"><Layout className="w-5 h-5 text-yellow-600" /></div>
        <div>
          <p className="text-sm text-yellow-800 font-medium">Viewing Timeline for: <span className="font-bold">{UNIVERSITIES[uniChoice].name}</span></p>
          <p className="text-xs text-yellow-700 mt-1">Years 1-2 are identical. Years 3-6 reflect the specific curriculum of your choice.</p>
        </div>
      </div>

      <div className="relative border-l-4 border-gray-200 ml-4 space-y-8">
        {TIMELINE_DATA.map((item, index) => {
          const isExpanded = expandedYear === item.id;
          const uniColor = uniChoice === 'TWU' ? 'bg-red-600' : 'bg-green-600';
          const dotColor = item.universitySpecific ? uniColor : 'bg-blue-600';
          
          return (
            <div key={item.id} className="relative pl-8">
              {/* Timeline Dot */}
              <div 
                className={`absolute -left-[10px] top-1 w-5 h-5 rounded-full border-4 border-white shadow-sm cursor-pointer transition-colors ${dotColor}`}
                onClick={() => setExpandedYear(isExpanded ? null : item.id)}
              />
              
              <div 
                className={`bg-white rounded-lg border transition-all duration-200 ${isExpanded ? 'shadow-md border-gray-300' : 'shadow-sm border-gray-100 hover:border-gray-300'}`}
              >
                <button 
                  onClick={() => setExpandedYear(isExpanded ? null : item.id)}
                  className="w-full flex items-center justify-between p-4 text-left"
                >
                  <div>
                    <span className="text-xs font-bold tracking-wider text-gray-400 uppercase">{item.period}</span>
                    <h3 className="text-lg font-bold text-gray-900">{item.year}</h3>
                    <p className="text-sm text-gray-600">{item.summary}</p>
                  </div>
                  {isExpanded ? <ChevronDown className="text-gray-400" /> : <ChevronRight className="text-gray-400" />}
                </button>

                {isExpanded && (
                  <div className="p-4 pt-0 border-t border-gray-100 bg-gray-50 rounded-b-lg">
                    <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-4 mt-4">
                      {(item.universitySpecific ? item.details[uniChoice] : item.details).map((detail, idx) => (
                        <div key={idx} className="bg-white p-3 rounded border border-gray-200 shadow-sm">
                          <h4 className="font-bold text-gray-800 text-sm mb-2 border-b pb-1">{detail.term} <span className="text-xs font-normal text-gray-500">({detail.focus})</span></h4>
                          <ul className="space-y-1">
                            {detail.items.map((subItem, sIdx) => (
                              <li key={sIdx} className="text-xs text-gray-600 flex items-start gap-1.5">
                                <span className="mt-1 w-1 h-1 rounded-full bg-gray-400 shrink-0" />
                                {/* Attempt to detect course codes and make them searchable */}
                                {subItem.match(/[A-Z]{4}\s\d{4}/) ? (
                                  <LinkSearch term={subItem} />
                                ) : (
                                  subItem
                                )}
                              </li>
                            ))}
                          </ul>
                        </div>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            </div>
          );
        })}
      </div>
    </div>
  );

  const renderProgress = () => (
    <div className="space-y-8 animate-in fade-in duration-500">
      <div className="bg-indigo-50 p-6 rounded-xl border border-indigo-100 text-center">
        <h2 className="text-2xl font-bold text-indigo-900 mb-2">{Math.round(calculateProgress())}% Complete</h2>
        <ProgressBar progress={calculateProgress()} />
        <p className="text-sm text-indigo-700 mt-2">Keep tracking your milestones to become an industry leader.</p>
      </div>

      <div className="grid md:grid-cols-1 lg:grid-cols-3 gap-6">
        {CHECKLIST_DATA.map((category) => (
          <div key={category.category} className="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div className="p-4 bg-gray-50 border-b border-gray-100 flex items-center gap-2 font-bold text-gray-800">
              {category.icon}
              {category.category}
            </div>
            <div className="p-4 space-y-3">
              {category.items.map((item) => (
                <label key={item.id} className="flex items-start gap-3 cursor-pointer group">
                  <div className="relative flex items-center">
                    <input 
                      type="checkbox" 
                      className="peer sr-only"
                      checked={!!checklistState[item.id]}
                      onChange={() => toggleCheck(item.id)}
                    />
                    <div className="w-5 h-5 border-2 border-gray-300 rounded peer-checked:bg-indigo-600 peer-checked:border-indigo-600 transition-all"></div>
                    <CheckCircle className="w-3.5 h-3.5 text-white absolute top-[3px] left-[3px] opacity-0 peer-checked:opacity-100 transition-opacity" />
                  </div>
                  <span className={`text-sm transition-colors duration-200 ${checklistState[item.id] ? 'text-gray-400 line-through' : 'text-gray-700 group-hover:text-gray-900'}`}>
                    {item.text}
                  </span>
                </label>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  );

  const renderResources = () => (
    <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-6 animate-in fade-in duration-500">
      {RESOURCES.map((section, idx) => (
        <div key={idx} className="bg-white border border-gray-200 rounded-xl shadow-sm p-6">
          <h3 className="font-bold text-gray-800 mb-4 border-b pb-2">{section.category}</h3>
          <ul className="space-y-3">
            {section.items.map((link, lIdx) => (
              <li key={lIdx}>
                <a 
                  href={link.url} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  className="flex items-center justify-between text-sm text-blue-600 hover:text-blue-800 group hover:bg-blue-50 p-2 rounded transition-colors"
                >
                  {link.name}
                  <ExternalLink className="w-4 h-4 opacity-50 group-hover:opacity-100" />
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
      {/* Quick Search Card */}
      <div className="bg-slate-800 text-white border border-slate-700 rounded-xl shadow-sm p-6">
        <h3 className="font-bold mb-4 border-b border-slate-600 pb-2 flex items-center gap-2">
          <Search className="w-4 h-4" /> Quick Course Search
        </h3>
        <p className="text-xs text-slate-400 mb-4">Click to search Google for specific degree requirements.</p>
        <div className="flex flex-wrap gap-2">
          {['ARTS 1316', 'MATH 1342', 'TWU Fashion Design Plan', 'UNT Merchandising Degree', 'Collin College AA'].map(tag => (
            <a 
              key={tag}
              href={`https://www.google.com/search?q=${encodeURIComponent(tag)}`}
              target="_blank"
              rel="noopener noreferrer"
              className="text-xs bg-slate-700 hover:bg-slate-600 px-3 py-1 rounded-full transition-colors border border-slate-600"
            >
              {tag}
            </a>
          ))}
        </div>
      </div>
    </div>
  );

  return (
    <div className="min-h-screen bg-gray-50 font-sans text-gray-900 pb-12">
      {/* Header */}
      <div className="bg-white border-b border-gray-200 shadow-sm sticky top-0 z-10">
        <div className="max-w-6xl mx-auto px-4 py-4">
          <div className="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div>
              <h1 className="text-2xl font-extrabold text-gray-900 tracking-tight">Fashion Career Roadmap</h1>
              <p className="text-sm text-gray-500">Collin College <span className="mx-1">→</span> TWU/UNT</p>
            </div>
            
            {/* Navigation */}
            <nav className="flex gap-1 bg-gray-100 p-1 rounded-lg overflow-x-auto">
              {[
                { id: 'summary', label: 'Summary', icon: <Layout className="w-4 h-4" /> },
                { id: 'timeline', label: 'Timeline', icon: <Calendar className="w-4 h-4" /> },
                { id: 'progress', label: 'Progress', icon: <CheckCircle className="w-4 h-4" /> },
                { id: 'resources', label: 'Links & Resources', icon: <ExternalLink className="w-4 h-4" /> },
              ].map(tab => (
                <button
                  key={tab.id}
                  onClick={() => setActiveTab(tab.id)}
                  className={`flex items-center gap-2 px-4 py-2 rounded-md text-sm font-medium whitespace-nowrap transition-all ${
                    activeTab === tab.id 
                      ? 'bg-white text-indigo-600 shadow-sm' 
                      : 'text-gray-600 hover:text-gray-900 hover:bg-gray-200'
                  }`}
                >
                  {tab.icon}
                  {tab.label}
                </button>
              ))}
            </nav>
          </div>
        </div>
      </div>

      {/* Main Content Area */}
      <div className="max-w-5xl mx-auto px-4 py-8">
        {/* University Toggle for Relevant Views */}
        {(activeTab === 'timeline' || activeTab === 'summary') && <UniToggle />}

        {activeTab === 'summary' && renderSummary()}
        {activeTab === 'timeline' && renderTimeline()}
        {activeTab === 'progress' && renderProgress()}
        {activeTab === 'resources' && renderResources()}
      </div>
    </div>
  );
}
